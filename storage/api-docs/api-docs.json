                    "404": {
                        "description": "User not found"
                    },
                    "403": {
                        "description": "Forbidden (not allowed to delete this user)"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
